<%= form_with(model: user, local: true) do |form| %>
  <%= form.label :fullname, 'Full Name *', :class => 'form-label' %>
  <%= form.text_field :fullname, :class => 'form-text', placeholder: 'Full name here...', autofocus: true %>
  <% user.errors.messages[:fullname].each do |message| %>
    <div class='error-sm'><%= message %></div>
  <% end %> 
  <%= form.label :photo, 'Photo (URL)', :class => 'form-label' %>
  <%= form.text_field :photo, :class => 'form-text', placeholder: 'URL here...'  %>
  <% user.errors.messages[:photo].each do |message| %>
    <div class='error-sm'><%= message %></div>
  <% end %> 
  <%= form.label :coverImage, 'Cover Image (URL)', :class => 'form-label' %>
  <%= form.text_field :coverImage, :class => 'form-text', placeholder: 'URL here...'  %>
  <% user.errors.messages[:coverImage].each do |message| %>
    <div class='error-sm'><%= message %></div>
  <% end %> 

  <div class='actions mt-4 justify-content-between d-flex'>
    <%= form.submit 'Update Account', :class => 'form-btn' %>
    <%= link_to 'Delete User', @user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'form-btn' %>
  </div>

      
<% end %>